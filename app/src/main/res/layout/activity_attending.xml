<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fighter"
    tools:context=".Attending">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בקשות מיוחדות"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintTop_toBottomOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/button4"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:text="חיול מהיר"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chooseOptions"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="@+id/chooseOptions"
        app:layout_constraintTop_toBottomOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/helloTextPrivateProfile2"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:fontFamily="monospace"
        android:text="שלום, אדון קורונה."
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/attendingTitle"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toStartOf="@+id/attendingTitle"
        app:layout_constraintTop_toBottomOf="@+id/attendingTitle"
        app:layout_constraintVertical_bias="0.021" />

    <TextView
        android:id="@+id/helloTextPrivateProfile3"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:text="צפי שעת הגעה:"
        android:paddingTop="12dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloTextPrivateProfile2"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/attendingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אישור התייצבות"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Spinner
        android:id="@+id/chooseOptions"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_marginBottom="552dp"
        android:spinnerMode="dropdown"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintEnd_toStartOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/helloTextPrivateProfile3"
        app:layout_constraintVertical_bias="0.001" />

</androidx.constraintlayout.widget.ConstraintLayout>